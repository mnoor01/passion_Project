<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_margin="1dp"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addressLine1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/addressName"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <TextView
        android:layout_margin="1dp"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/addressName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addressLine2"
        android:id="@+id/addressLine1"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <TextView
        android:layout_margin="1dp"
        app:layout_constraintTop_toBottomOf="@id/addressLine1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addressLine3"
        android:id="@+id/addressLine2"
        android:layout_width="match_parent"
        android:textAlignment="viewStart"
        android:layout_height="30dp" />
    <TextView
        android:layout_margin="1dp"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressLine2"
        app:layout_constraintBottom_toTopOf="@id/addressCity"
        android:id="@+id/addressLine3"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:layout_margin="1dp"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressLine3"
        app:layout_constraintBottom_toTopOf="@id/addressState"
        android:id="@+id/addressCity"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addressZip"
        app:layout_constraintTop_toBottomOf="@id/addressCity"
        android:id="@+id/addressState"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="1dp"/>
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressState"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/addressZip"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="1dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
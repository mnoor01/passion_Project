<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:background="#DA14FF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/electionName"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textColor="#00FFFF"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/electionDayItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/electionDayItem"
        android:textSize="20sp"
        android:textColor="#00FFFF"
        app:layout_constraintTop_toBottomOf="@id/electionName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/electionNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        />
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#00FFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/electionDayItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/electionNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"/>
    </android.support.constraint.ConstraintLayout>





    </android.support.v7.widget.CardView>